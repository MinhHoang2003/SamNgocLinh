<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryLight"
    style="@style/SplashTheme"
    android:layout_height="match_parent"
    tools:context=".ViewController.splash.splash_screen">

    <ImageView
        android:id="@+id/app_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ginseng"
        app:layout_constraintBottom_toTopOf="@id/text_app_splash"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_app_splash"
        android:layout_width="wrap_content"
        android:text="@string/title_plash"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="@dimen/sp_20"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>